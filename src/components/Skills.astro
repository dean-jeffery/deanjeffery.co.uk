---
// src/components/Skills.astro
const skills = {
	Languages: ['HTML', 'CSS', 'JavaScript', 'PHP'],
	Frameworks: ['React', 'Astro', 'Next.js', 'Vite'],
	Styling: ['Tailwind CSS', 'Bootstrap'],
	'Tools & Platforms': ['Git', 'MySQL', 'Lighthouse', 'WordPress', 'Shopify'],
	Specialties: ['Accessibility (WCAG)', 'Performance Optimization', 'E-commerce'],
} as const;
---

<section id='skills' class='py-20 bg-gray-50'>
	<div class='max-w-6xl mx-auto px-4 sm:px-6 lg:px-8'>
		<h2 class='text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900'>Skills & Technologies</h2>
		<div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
			{
				Object.entries(skills).map(([category, items]) => (
					<div class='bg-white rounded-lg p-6 shadow-sm'>
						<h3 class='text-xl font-semibold mb-4 text-gray-900'>{category}</h3>
						<div class='flex flex-wrap gap-2'>
							{items.map((skill) => (
								<span class='bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium'>{skill}</span>
							))}
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
